{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@federation/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.*", "src/**/__tests__/**"],
  "references": [
    { "path": "../shared" }
  ]
}

